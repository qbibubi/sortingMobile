<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    android:padding="@dimen/padding"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- Layout for data sample input-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dataInputTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_input"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/margin"/>

        <EditText
            android:id="@+id/dataSizeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/data_input"
            android:ems="10"
            android:inputType="numberSigned"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/margin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dataTV"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/startButton"
                android:text="@string/start_button"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:layout_margin="@dimen/margin"/>

            <Button
                android:id="@+id/randomizeButton"
                android:text="@string/random_button"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:layout_margin="@dimen/margin"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:max="100"
            android:padding="@dimen/padding" />

        <TextView
            android:id="@+id/estimatedTimeTV"
            android:text="@string/estimated_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/margin"/>

    </LinearLayout>

</LinearLayout>
